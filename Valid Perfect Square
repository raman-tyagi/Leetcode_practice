class Solution {
public:
    bool isPerfectSquare(int num) {

        if(num==1){
           return true;
        }
        if(num==2 || num==3){
           return false;
        }
        for(long i=0;i<=num/2;i++){
              long long s = i*i;
            if(s==num){
                return true;
                break;
            }
            
        }
        return false;
        
    }
};
